  "start_url": "/?source=pwa-launch&mode=standalone",
  "scope": "/",
  "display": "standalone",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "background_color": "#ffffff",
  "theme_color": "#000000",
  "screenshots": [
    {
      "src": "/screenshots/mobile.png",
      "sizes": "320x640",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Fortune Flight Mobile View"
    },
    {
      "src": "/screenshots/desktop.png",
      "sizes": "1024x640",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Fortune Flight Desktop View"
    }
  ],
  "icons": [
    {
      "src": "/icons/72.png",
      "sizes": "72x72",
      "type": "image/png"
    },
    {
      "src": "/icons/96.png",
      "sizes": "96x96",
      "type": "image/png"
    },
    {
      "src": "/icons/144.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "/icons/192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/icons/512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+pwa",
      "url": "/%s"
    }
  ]
